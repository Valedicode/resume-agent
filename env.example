# Root-level environment variables template
# Copy this file to .env and fill in your actual values

# ===========================================
# Backend Configuration
# ===========================================

# OpenAI API Key (required for LLM functionality)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Database Configuration (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/resume_architect

# Application Settings
APP_NAME="Resume Architect Agent"
DEBUG=False

# ===========================================
# Frontend Configuration
# ===========================================

# Backend API URL
NEXT_PUBLIC_API_URL=http://localhost:8000

# ===========================================
# Optional: LangSmith Tracing
# ===========================================
# Uncomment to enable LangChain debugging/tracing
# LANGCHAIN_TRACING_V2=true
# LANGCHAIN_API_KEY=your-langsmith-api-key
# LANGCHAIN_PROJECT=resume-architect-agent

# ===========================================
# Database (if using Docker Compose)
# ===========================================
# POSTGRES_USER=resume_architect_user
# POSTGRES_PASSWORD=your-secure-password
# POSTGRES_DB=resume_architect

